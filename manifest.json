{
  "manifest_version": 2,

  "name": "Selection Reader",
  "description": "Increases the size of the selected text so you can read better",
  "version": "1.0",

  "icons": { "16": "img/c-read-ico-16.png",
             "48": "img/c-read-ico-48.png",
             "128": "img/c-read-ico-128.png"
  },

  "background": {
	"scripts": ["js/cread.js"]
  },

  "permissions": [
	"contextMenus",
	"tabs"
  ]
}


